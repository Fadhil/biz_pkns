- model_class = Survey
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th 
        No.
      %th
        = t('name')
      %th
        = t('description')
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @surveys.each_with_index do |survey, index|
      %tr
        %td= index + 1
        %td= survey.title
        %td= survey.description
        %td
          = link_to t('view'), survey, class: 'btn btn-mini'
          - unless survey.sent?
            = link_to t('edit', :default => t("helpers.links.edit")), edit_survey_path(survey), :class => 'btn btn-mini'
            = link_to t('destroy', :default => t("helpers.links.destroy")), survey_path(survey), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_survey_path, :class => 'btn btn-primary'
