
=render partial: 'adverts/banner_slider', locals: { adverts: @adverts }

.page-header
  %h1=t '.title'
  
%div.container
  %div.row
    %div.span5
      - @blogs.each do |blog|
        %b=link_to blog.title, show_blog_path(blog)
        %br
        = truncate(blog.content, :length => 300).html_safe
        = link_to t('.read_more'), show_blog_path(blog)
        %br
        %br
      - unless @blogs.count > 5
        =(link_to t('.see_more'), category_blog_path, :class => 'btn metro medium primary')
      