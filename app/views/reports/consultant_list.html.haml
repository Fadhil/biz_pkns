.row
  %h3
    Senarai Perunding di Bawah BPU PKNS
.row
  .twelve.columns
    .table
      .row.table-head
        .six.columns
          %h6.title
            = t('consultant_name')
        .three.columns.center
          %h6.title
            = t('registered_year')
        .three.columns.center
          %h6.title
            = t('current_status')
      - @consultants.each do |consultant|
        .row.table-rows
          .six.columns
            %p
              = consultant.full_name
          .three.columns.center
            %p 
              = consultant.register_date
          .three.columns.center
            %p
              = consultant.is_still_active? ? t('active') : t('inactive')
 
.row
  .twelve.columns
    .row
      .six.columns.right-aligned
        %h6
          = t('total_active_consultants')
      .six.columns
        %p
          = @consultants.active.count 
    .row
      .six.columns.right-aligned
        %h6
          = t('total_inactive_consultants')
      .six.columns
        %p
          = @consultants.inactive.count 

