- model_class = Skill
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= "Bil"
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:experience)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @skills.each_with_index do |skill, i|
      %tr
        %td= i + 1
        %td= skill.name
        %td= skill.description
        %td= skill.experience
        %td=l skill.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_skill_path(skill), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), skill_path(skill), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

%span.medium.pretty.btn.primary
  = link_to t('.new', :default => t("helpers.links.new")), new_skill_path, :class => 'btn btn-primary'
