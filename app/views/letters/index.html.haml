- model_class = Letter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:subject)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:message)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @letters.each do |letter|
      %tr
        %td= link_to letter.id, letter_path(letter)
        %td= letter.subject
        %td= letter.first_name
        %td= letter.last_name
        %td= letter.message
        %td=l letter.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_letter_path(letter), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), letter_path(letter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_letter_path, :class => 'btn btn-primary'
