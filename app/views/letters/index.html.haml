- model_class = Letter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
= form_tag '', method: :get do
  .row-fluid
    .span3
      = label :search, :name, t('search_by_name')
      = text_field_tag 'search_term','', name: 'search[term]'
    .span3
      %br/
      = button_tag t('search'), class: 'btn btn-success', :style => "margin-top:8px;" 
      %br/
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= t('name')
      %th
  %tbody
    - @letters.each do |letter|
      %tr
        %td= link_to letter.id, letter_path(letter)
        %td= letter.full_name
        %td
          =# link_to t('.edit', :default => t("helpers.links.edit")), edit_letter_path(letter), :class => 'btn btn-mini'
          =# link_to t('.destroy', :default => t("helpers.links.destroy")), letter_path(letter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
          -# unless user.id == letter.user_id
          = link_to t('.history'), letter_user_user_path(letter), :class => 'btn btn-mini btn-secondary'
          = link_to t('.send_letter'), compose_letter_path(letter), :class => 'btn btn-mini'

=# link_to t('.new', :default => t("helpers.links.new")), new_letter_path, :class => 'btn btn-primary'