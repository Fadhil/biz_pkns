= form_for @letter, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :subject, :class => 'control-label'
    .controls
      = f.text_field :subject, :class => 'text_field input-xlarge'
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
      = f.text_field :last_name, :class => 'text_field'
  .control-group
    = f.label :message, :class => 'control-label'
    .controls
      = f.text_area :message, :class => 'text_area input-xlarge'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), letters_path, :class => 'btn'