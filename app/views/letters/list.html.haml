- model_class = Letter
.row
  %h3.eight.columns
    = t('.title')
  .four.columns.action
    %span.pretty.medium.primary.btn.entypo.icon-left.icon-list-add
      = link_to t('.new'), new_letter_path
%table.table.table-striped
  %thead
    %tr
      %th= "Bil"
      %th= t('.subject')
      %th= t('.created_at')
      %th
  %tbody
    - @letters.each_with_index do |letter, i|
      %tr
        %td= i+1
        %td= letter.subject
        %td= letter.created_at.strftime("%d %b %y, %H:%M")
        %td
          %span.small.pretty.btn.primary
            = link_to t('.preview'), preview_letter_path(letter)

