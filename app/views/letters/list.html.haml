- model_class = Letter
.row
  %h3.nine.columns
    = t('.title', :default => model_class.model_name.human.pluralize)
  .three.columns.action
    %span.pretty.medium.primary.btn.entypo.icon-left.icon-list-add
      = link_to t('.new', :default => t("helpers.links.new")), new_letter_path
  %hr.divider
.row
  .twelve.columns
    %dl.dl-horizontal.hide
      .adbox
        - @adverts.each do |advert|
          - if advert.photo
            - if !advert.photo.file.nil?
              .adinfo.userselect
                .title= advert.title
                .venue= 'Tempat : '+ advert.location.to_s
                .date= 'Tarikh : '+ advert.start_date.strftime("%d %b %y").to_s
              = image_tag (advert.photo.file)
.table
  .row.table-head
    .two.columns
      %h6.title= t('.index')
    .eight.columns
      %h6.title= t('.subject')
  - @letters.each_with_index do |letter, i|
    .row.table-rows
      .two.columns
        %p
          = i+1
      .eight.columns
        %p
          = link_to letter.subject, preview_letter_path(letter), :class => 'name'
        %small.info.label
          Tarikh :
          = letter.created_at.strftime("%d %b %y, %H:%M:%S")
      .two.columns
        .row
          .twelve.columns
          .twelve.columns
            %span.pretty.small.btn.warning.icon-left.entypo.icon-mail
              = link_to t('.history'), letter_user_user_path(letter)
          .twelve.columns
            %span.pretty.small.btn.danger.icon-left.entypo.icon-pencil
              = link_to t('.send_letter'), compose_letter_path(letter)
