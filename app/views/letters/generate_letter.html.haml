- model_class = Letter
- @users.each_with_index do |user,index|
  - unless index == 0
    %h1.break
  .row
    %strong
      'KEJUJURAN DAN KETEKUNAN'
  .row
    .eight.columns
    .two.columns
      Surat Kami:
    .two.columns
  .row
    .eight.columns
    .two.columns
      Tarikh:
    .two.columns
      = @letter.date
  .row
    .twelve.columns
      .letter-format
        %p= user.full_name
        %p= full_address(user).html_safe
        .row
          %p
            Tuan/Puan,
        .row
          .twelve.columns
            %h5= "#{t('subject')} : #{@letter.subject}"
            %p
              =@letter.message.html_safe
        .row
          .twelve.columns
            %p
              Sekian, terima kasih.

            %strong.block
              "BERKHIDMAT UNTUK NEGARA"

            %p
              Saya yang menurut perintah
            %br
            %br
            %br
            %br
            %br
            %strong.block
              / = current_user.full_name
          %hr.divider
%h1.break
.row
  .twelve.columns
    %span.medium.pretty.btn.warning
      = link_to t('.print'), generate_letter_path(@letter, letter_user_select: params[:letter_user_select], letter_program_select: params[:letter_program_select], letter_course_select: params[:letter_course_select], format: "pdf"), method: :post
    %span.medium.pretty.btn.warning
      = link_to t('edit', :default => t("helpers.links.edit")), edit_letter_path(@letter)
    %span.medium.pretty.btn.danger
      = link_to t('destroy', :default => t("helpers.links.destroy")), letter_path(@letter), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
