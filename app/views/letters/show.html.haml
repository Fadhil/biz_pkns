- model_class = Letter
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:subject) + ':'
  %br
  = @letter.subject
%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @letter.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @letter.last_name
%p
  %strong= model_class.human_attribute_name(:message) + ':'
  %br
  = @letter.message

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), letters_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_letter_path(@letter), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), letter_path(@letter), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
