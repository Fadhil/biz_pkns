/ %style
/   html{ margin-top: 130px; }

- model_class = Newsletter
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= t('.subject') + ':'
  %br
  = @newsletter.subject
%p
  %strong= t('.message') + ':'
  %br
  = @newsletter.message.html_safe

- unless @newsletter.sent?
  .form-actions
    %span.medium.pretty.btn.secondary
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_newsletter_path(@newsletter)
    %span.medium.pretty.btn.danger
      = link_to t('.destroy', :default => t("helpers.links.destroy")), newsletter_path(@newsletter), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
