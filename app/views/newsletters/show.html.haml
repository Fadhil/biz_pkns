/ %style
/   html{ margin-top: 130px; }

- model_class = Newsletter
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= t('.subject') + ':'
  %br
  = @newsletter.subject
%p
  %strong= t('.message') + ':'
  %br
  =# "Is this email not displaying correctly?"
  =# link_to "View it in your browser.", newsletter_path(@newsletter)
  = @newsletter.message.html_safe

.form-actions
  =# link_to t('.back', :default => t("helpers.links.back")), newsletters_path, :class => 'btn'
  %span.medium.pretty.btn.secondary
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_newsletter_path(@newsletter)#, :class => 'btn'
  %span.medium.pretty.btn.danger
    = link_to t('.destroy', :default => t("helpers.links.destroy")), newsletter_path(@newsletter), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }#, :class => 'btn btn-danger'
