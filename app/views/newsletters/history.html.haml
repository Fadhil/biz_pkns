- model_class = Newsletter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= t('.subject')
      %th= t('.created_at')
      %th
  %tbody
    - @newsletters.each do |newsletter|
      %tr
        %td= link_to newsletter.id, newsletter_path(newsletter)
        %td= newsletter.subject
        %td= newsletter.created_at.strftime("%d %b %y, %M:%S")
        %td
          =# link_to t('.edit', :default => t("helpers.links.edit")), edit_newsletter_path(newsletter), :class => 'btn btn-mini'
          = link_to t('.view'), newsletter_path(newsletter), :class => 'btn btn-mini'
          =# link_to t('.destroy', :default => t("helpers.links.destroy")), newsletter_path(newsletter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

=# link_to t('.new', :default => t("helpers.links.new")), new_newsletter_path, :class => 'btn btn-primary'
