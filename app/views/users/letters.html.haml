.page-header
  %h1=t('.title') + " #{@user.full_name}"
%table.table.table-striped
  %thead
    %tr
      %th
        ID
      %th= t('.subject')
      %th
  %tbody
    - @letters.each_with_index do |letter,i|
      %tr
        %td= i+1
        %td= letter.subject

        %td
          = link_to t('view'), letter_path, :class => 'btn btn-secondary btn-mini'
          =# link_to t('.destroy', :default => t("helpers.links.destroy")), survey_path(survey), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

=# link_to t('.new', :default => t("helpers.links.new")), new_survey_path, :class => 'btn btn-primary'
