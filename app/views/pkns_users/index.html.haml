- model_class = User
= form_tag '', method: :get do
  .row
    %h3.ten.columns
      = t('.title')
    .two.columns.action
      %span.medium.primary.btn.entypo.icon-left.icon-list-add
        = link_to t('new', :default => t("helpers.links.new_user")), new_pkns_user_path

.table
  .row.table-head
    .six.columns
      %h6.title= t('name')
    .three.columns
      %h6.title= "#{t('city')}, #{t('state')}"
    .one.columns
      %h6.title= t('status')
  - @users.each_with_index do |user,i|
    .row.table-rows
      .six.columns
        %p
          = link_to "#{user.first_name} #{user.last_name}", user_path(user), :class => 'name'
      .three.columns
        - if user.address.nil?
          %p N/A
        - else
          %p= "#{user.address.city.name}, #{user.address.city.state_name}"
      - if can? :manage, @user
        .one.columns
          %span.small.btn.info.icon-left.entypo.icon-list-add
            = link_to t('view', :default => t("helpers.links.edit")), pkns_user_path(user)
        .one.columns
          %span.small.btn.danger.icon-left.entypo.icon-trash
            =link_to t('destroy', :default => t("helpers.links.destroy")),
                        pkns_user_path(user),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('are_you_sure'))) }

  = paginate @users

