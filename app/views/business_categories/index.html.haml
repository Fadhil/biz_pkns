- model_class = t('business_category')
.page-header
  %h1=t '.title'
%table.table.table-striped
  %thead
    %tr
      %th
        ID
      %th= t('name')
      %th
  %tbody
    - @business_categories.each do |business_category|
      %tr
        %td= link_to business_category.id, business_category_path(business_category)
        %td= business_category.name

        %td
          = link_to t('edit', :default => t("helpers.links.edit")), edit_business_category_path(business_category), :class => 'btn btn-secondary btn-mini'
          = link_to t('destroy', :default => t("helpers.links.destroy")), business_category_path(business_category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_business_category_path, :class => 'btn btn-primary'
