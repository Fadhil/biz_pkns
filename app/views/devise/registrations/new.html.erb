<h1><%= t('sign_up') %></h1>
<br/>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class='row-fluid'>
    <div class='span3'><%= f.label t('first_name') %><br />
    <%= f.text_field :first_name, :autofocus => true %></div>

    <div class='span3'><%= f.label t('last_name') %><br />
    <%= f.text_field :last_name, :autofocus => true %></div>
  </div>

  <div class='row-fluid'>
    <div class='span2'>
      <%= f.label :gender %>
    </div>
    <div class='span3'>
      <span>
        <%= f.radio_button :gender, 'm' %>
        Male

      <br/>
      <span>
        <%= f.radio_button :gender, 'f' %>
        Female
      </span>
    </div>
  </div>
  <br/>
  <div class='row-fluid'>
    <div class='span3'>
      <%= f.label t('ic_number') %><br/>
      <%= f.text_field :ic_number %>
    </div>
    <div class='span3'>
      <%= f.label t('phone') %><br />
      <%= f.text_field :phone %>
    </div>
    <div class='span3'>
      <%= f.label t('email') %><br />
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>

  <div class='row-fluid'>
    <div class='span3'>
      <%= f.label t('password') %><br />
      <%= f.password_field :password %>
    </div>
    
    <div class='span3'>
      <%= f.label t('password_confirmation') %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  







  <div><%= f.submit t('sign_up') %></div>
<% end %>

<%= render "devise/shared/links" %>
