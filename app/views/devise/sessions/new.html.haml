%style{type: 'text/css'}
  = "body { background-color: #EBEAEA; background: url('#{image_path 'bground.jpg'}'); no-repeat center center; }"
.row
  .span8.login-hero
    %h1 Jaringan Usahawan PKNS BizClub
    / %p
    /   %span.icon
    /   %b Rakan niaga
    /   pelbagai bidang dan kemahiran.
    / %p
    /   %b Kongsi pengalaman
    /   dalam perniagaan.
    / %p
    /   %b Jaringan keusahawanan
    /   mantap dan berkesan.

  .eight.columns
    - unless current_user
      .panel
        .row
          %h6.eleven.columns
            = t('sign_in')
          %span.one.columns
            %i.icon-cog.ico-custom
        .row
          = form_for("user", :url => user_session_path) do |f|
            %ul.eleven.columns
              %li.field
                = f.email_field :email, :autofocus => true, :class => 'email input', :placeholder => t('email')
              %li.field
                = f.password_field :password, :class => 'password input', :placeholder => t('password')
              %li.field
                .five.columns
                  - if devise_mapping.rememberable?
                    = f.label t('remember_me'), :class => 'checkbox checked', :for => 'user_remember_me' do
                      = f.check_box :remember_me, :checked => 'checked'
                      %span
                      Remember Me
                .four.columns
                  = f.submit t('login'), :class => ' pretty medium primary btn'
        = render "devise/shared/links"
