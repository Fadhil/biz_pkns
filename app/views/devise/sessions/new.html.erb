<style type="text/css" media="screen">
  body { bakground-color: #EBEAEA; background: url('<%= image_path 'bground.jpg' %>'); no-repeat center center; }
</style>

<div class="row">
  <div class="span8 login-hero">
    <h1>Jaringan Usahawan PKNS BizClub</h1>
    <p><span class="icon"></span><b>Rakan niaga</b> pelbagai bidang dan kemahiran.</p>
    <p><b>Kongsi pengalaman</b> dalam perniagaan.</p>
    <p><b>Jaringan keusahawanan</b> mantap dan berkesan.</p>
  </div>
  <div class="span3">
    
    <div class="login-box">
      <div class="page-header">
        <h1><%= t('sign_in') %></h1>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><%= f.label t('email') %>
        <%= f.email_field :email, :autofocus => true %></div>

        <div><%= f.label t('password') %>
        <%= f.password_field :password %></div>

        <% if devise_mapping.rememberable? -%>
          <div class="row" style="padding:0 0 10px 0;">
            <div class="span">
              <%= f.check_box :remember_me %>
            </div>
            <div class="span3" style="margin-left:10px; padding-top:3px;">
              <%= f.label t('remember_me') %>
            </div>
          </div>
          <div> </div>
        <% end -%>

      <div><%= f.submit t('sign_in'), :class => 'btn btn-primary' %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  
</div>
