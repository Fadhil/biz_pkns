:css
  .filter {margin-left:-25px; margin-bottom:20px;}
  ul li {display: inline;}

- model_class = Blog
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%div.filter
  %ul
    %li= link_to_unless params[:filter].nil?, "Semua", blogs_path
    = " | " 
    %li= link_to_unless_current "Umum", blogs_path(filter: :general)
    = " | "
    %li= link_to_unless_current "Berita", blogs_path(filter: :news)
    = " | " 
    %li= link_to_unless_current "Keusahawanan", blogs_path(filter: :entrepreneurship)
    = " | " 
    %li= link_to_unless_current "Pemasaran", blogs_path(filter: :marketing)

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= "Tag"
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @blogs.each do |blog|
      %tr
        %td= link_to blog.id, blog_path(blog)
        %td= blog.title
        %td= raw blog.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_blog_path(blog), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), blog_path(blog), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_blog_path, :class => 'btn btn-primary'
