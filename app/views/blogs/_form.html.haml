= form_for @blog, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label t('.title'), :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field input-xxlarge'
  .control-group
    = f.label t('.category'), :class => 'control-label'
    .controls
      =# f.text_field :category
      = f.select :category, options_for_select([["Umum","Umum"],["Berita","Berita"],["Keusahawanan","Keusahawanan"],["Pemasaran","Pemasaran"]], selected: @blog.category), :include_blank => true
  .control-group
    = f.label t('.tag'), t('.tags'), :class => 'control-label'
    .controls
      = f.text_field :tag_list
  .control-group
    = f.label t('.content'), :class => 'control-label'
    .controls
      = f.text_area :content, :class => 'text_area redactor'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), blogs_path, :class => 'btn'
