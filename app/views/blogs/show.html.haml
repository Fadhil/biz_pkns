- model_class = Blog
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @blog.title
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @blog.content.html_safe

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), blogs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_blog_path(@blog), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), blog_path(@blog), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
