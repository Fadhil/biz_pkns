- model_class = Blog
.row
  .twelve.columns
    %h4=t '.title', :default => model_class.model_name.human.pluralize
    %hr.divider
.twelve.colgrid
  .row
    - { news: 'Berita', general: 'Umum', entrepreneurship: 'Keusahawanan', marketing: 'Pemasaran'}.each_with_index do |kvpair, i|
      .three.columns
        = content_tag( 'a', href: category_blog_path(filter: kvpair[0])) do
          .panel
            %p=kvpair[1]
            .image
              = image_tag "http://lorempixel.com/200/140/business/#{i}"
            %br
.row
  .eight.columns
    .row
      .three.columns
        %h5 Berita Terkini
      /
        .nine.columns
          %ul.filter
            %li= t('.filter')
            %li
              %span.round.btn.small.warning
                = link_to "Semua", category_blog_path
            %li
              %span.round.btn.small.warning
                = link_to_unless_current "Umum", category_blog_path(filter: :general)
            %li
              %span.round.btn.small.warning
                = link_to_unless_current "Berita", category_blog_path(filter: :news)
            %li
              %span.round.btn.small.warning
                = link_to_unless_current "Keusahawanan", category_blog_path(filter: :entrepreneurship)
            %li
              %span.round.btn.small.warning
                = link_to_unless_current "Pemasaran", category_blog_path(filter: :marketing)
      %hr.divider

    .row
      .twelve.columns
        %ul.blog-list
          - @blogs.each do |blog|
            %li.panel
              %h5=link_to blog.title, show_blog_path(blog)
              .content
                /= truncate(blog.content, :length => 500).html_safe
                = blog.content.html_safe
                .info
                  %small
                    = link_to t('.read_more'), show_blog_path(blog)
              %p
                %small
                  = "Tag : " unless blog.tag_list.blank?
                  = raw blog.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
  = render partial: 'portals/newsbar'