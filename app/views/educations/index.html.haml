- model_class = Education
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= t(".name")
      %th
  %tbody
    - @educations.each do |education|
      %tr
        %td= link_to education.id, education_path(education)
        %td= education.name

        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_education_path(education), :class => 'btn btn-secondary btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), education_path(education), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_education_path, :class => 'btn btn-primary'
