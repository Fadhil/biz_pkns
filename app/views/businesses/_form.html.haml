= form_for @business, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label t('.name'), :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), businesses_path, :class => 'btn'
