- model_class = Business
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= t('.name') + ':'
  = @business.name

.form-actions
  %span.medium.pretty.btn.secondary
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_business_path(@business)
  %span.medium.pretty.btn.danger
    = link_to t('.destroy', :default => t("helpers.links.destroy")), business_path(@business), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
  %span.medium.pretty.btn.warning
    = link_to t('back'), businesses_path