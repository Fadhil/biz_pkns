<%- model_class = Program -%>
<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('description') %></th>
    </tr>
  </thead>
  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= link_to program.name, program_path(program) %></td>
        <td><%= program.description %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.edit")),
                        program_path(program), :class => 'btn btn-mini' %>

          <% if can? :manage, Program %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_program_path(program), :class => 'btn btn-mini' %>
          <% end %>
          <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                      program_path(program),
                      :method => :delete,
                      :data => { :confirm => t('confirm', :default => t("helpers.links.confirm", :default => t('are_you_sure'))) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_program_path,
            :class => 'btn btn-primary' %>
