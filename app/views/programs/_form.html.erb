<%= nested_form_for @program, html: { multipart: true }, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label t('name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.fields_for :logo do |l| %>
      <%= l.label 'Muatnaik logo', class: 'control-label' %>
      <div class='controls'>
        <%= l.file_field :file, class: 'text-field' %>
      </div>
    <% end %>
  </div>
  <div class="control-group">
    <%= f.label t('description'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area_large' %>
    </div>
  </div>
