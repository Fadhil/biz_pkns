    <%= f.label t('.courses'), :class => 'control-label' %>
    <%#= nested_form_for @courses, html: { multipart: true } do |c| %>
      <div class="controls">
        <%= f.fields_for :courses do |task_form| %>
          <p><%= task_form.text_field :name %>
          <%= task_form.link_to_remove "x", class: "btn" %></p>
        <% end %>
        <p><%= f.link_to_add t('.add_new_course'), :courses, class: "btn btn-mini" %></p>
      </div>
    <%# end %>
  </div> -->

  <div class="form-actions">
    <% if @program.new_record? %>
      <%= f.submit t('register'), :class => 'btn btn-primary' %>
    <% else %>
      <%= f.submit t('update'), :class => 'btn btn-primary' %>
    <% end %>
    <%= link_to t('cancel', :default => t("helpers.links.cancel")), programs_path, :class => 'btn' %>
  </div>
<% end %>
