<header class="navbar navbar-fixed-top">
  <div class="navbar-inner navbar-topbar">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <% if current_user %>
        <% home_page = root_path %>
      <% else %>
        <% home_page = new_user_session_path %>
      <% end %>
      <a class="brand" href="<%= home_page %>"><%= image_tag('brandlogo.png', size: '230x230') %></a>
      <div class="nav-collapse">

        <ul class="nav pull-right">
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle user" data-toggle="dropdown">
                <div id="user-avatar">
                  <% unless current_user.profile_photo.nil? %><%= image_tag(current_user.profile_photo.file, size: '33x33') %><% end %>
                </div>
                <span>
                  <%= current_user.first_name %> <%= current_user.last_name %>
                  <b class="caret"></b>
                </span>
              </a>
              <ul class="dropdown-menu">
                
                <% if current_user %>
                  <li><%= link_to t('.profile'), user_path(id: current_user.id) %></li>
                <% end %>

                <li>
                  <%= content_tag(:span,"&nbsp&nbsp#{t('setting')}".html_safe, style: "color: #333") %>
                </li>

                <li><%= link_to t('logout'), destroy_user_session_path, method: :delete %></li>

              </ul>
            </li>
          <% elsif current_consultant %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle user" data-toggle="dropdown">
                <% unless current_consultant.profile_photo.nil? %><%= image_tag(current_consultant.profile_photo.file, size: '33x33') %><% end %>
                <%= current_consultant.first_name %> <%= current_consultant.last_name %> 
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.consultant_profile'), consultant_path(id: current_consultant.id) %></li>
                <%#= todo session[:current_program_id] %>
                <li><%= link_to 'test', select_program_path(7) %></li>
                <li><%= link_to 'Electronics and stuff', select_program_path(9) %> </li>
                <li><%= content_tag(:span,"&nbsp&nbsp#{t('setting')}".html_safe, style: "color: #333") %></li>
                <li><%= link_to t('logout'), destroy_consultant_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('sign_in'), new_user_session_path %></li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>

  <div class="navbar-inner navbar-menu">
    <div class="container">
      <div class="nav-collapse">
        <% if current_consultant %>
          <ul class="nav">

            <li><a href=<%= members_path %>><%= t('.member_directory') %></a></li>

            </li>
            <li><a href=<%= business_directory_path %>><%= t('.business_directory') %></a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('.course') %><b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href=<%= course_listing_path %>><%= t('.list_of_courses') %></a></li
                  >
                <li><a href=<%= courses_path %>><%= t('.add_modify_courses') %></a></li>
              </ul>
            </li>
          </ul>  
        <% end %>
        <% if current_user %>
          <ul class="nav">
            <% if !current_user.admin? %>
              <li><a href=<%= members_path %>><%= t('.member_directory') %></a></li>
              <li><a href=<%= business_directory_path %>><%= t('.business_directory') %></a></li>
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Kursus
                <b class="caret"></b>
                <ul class="dropdown-menu">
                  <li><a href=<%= course_listing_path %>><%= t('.course_listing') %></a></li>
                  <li><a href=<%= user_course_listing_path %>><%= t('my_courses') %></a></li>
                </ul>
              </li>
              <% if cannot? :consultation, :pages %>
                <li><a href='#' style="color:gray"%><%= t('.consultation') %></a></li>
              <% else %>
                <li><a href=<%= consultation_path %>><%= t('.consultation') %></a></li>
              <% end %>
            <% end %>
            
            <% if current_user.admin? %>

                <li><a href=<%= members_path %>><%= t('.member_directory') %></a></li>

            </li>
            <li><a href=<%= business_directory_path %>><%= t('.business_directory') %></a></li>
            <li><a href=<%= programs_path %>><%= t('.program') %></a></li>
            <li><a href=<%= consultants_path %>><%= t('.consultant') %></a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('.course') %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href=<%= course_listing_path %>><%= t('.course_listing') %></a></li>
                <li><a href=<%= courses_path %>><%= t('.add_modify_courses') %></a></li>
              </ul>
            </li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('register') %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href=<%= skill_path %>><%= t('.new_skill') %></a></li>
                <li><a href=<%= education_path %>><%= t('.new_education') %></a></li>
                <li><a href=<%= business_path %>><%= t('.new_business') %></a></li>
                <li><a href=<%= new_consultant_path %>><%= t('.new_consultant') %></a></li>

              </ul>
            </li>
            <% end %>
          </ul>
        <% end %>
    </div>
  </div>
</header>