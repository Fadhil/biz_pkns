<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <% if current_user %>
        <% home_page = root_path %>
      <% else %>
        <% home_page = new_user_session_path %>
      <% end %>
      <a class="brand" href="<%= home_page %>">BizPkns</a>
      <div class="nav-collapse">
        <ul class="nav">
          <% if current_user %>
            <li><%= link_to 'Profile', edit_user_path(id: current_user.id) %></li>
          <% elsif current_consultant %>
            <li><%= link_to 'Edit Consultant Profile', edit_consultant_path(id: current_consultant.id) %></li>
          <% end %>
          <li><a href=<%= members_path %>>Member Directory</a></li>
          <li><a href=<%= business_directory_path %>>Business Directory</a></li>
          <li><a href=<%= consultation_path %>>Consultation</a></li>
          <% if current_user %>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          <% elsif current_consultant %>
            <li><%= link_to 'Logout', destroy_consultant_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
          <% end %>
          <% unless current_user %>
            <li><%= link_to 'Administrate Users', users_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>