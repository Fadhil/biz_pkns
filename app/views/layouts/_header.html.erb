<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <% if current_user %>
        <% home_page = root_path %>
      <% else %>
        <% home_page = new_user_session_path %>
      <% end %>
      <a class="brand" href="<%= home_page %>">BizPkns</a>
      <div class="nav-collapse">
        <ul class="nav">
          <% unless current_user %>
            <li><%= link_to 'Administrate Users', users_path %></li>
          <% end %>
          <li><a href=<%= members_path %>><%= t('.member_directory') %></a></li>

          <li><a href=<%= business_directory_path %>><%= t('.business_directory') %></a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Courses</a>
            <ul class="dropdown-menu">
              <li><a href=<%= courses_path %>><%= t('.list_of_courses') %></a></li>
              <li><a href=<%= course_listing_path %>><%= t('.upcoming_courses') %></a></li>
            </ul>
          </li>
          <li><a href=<%= consultation_path %>><%= t('.consultation') %></a></li>
        </ul>

        <ul class="nav pull-right">
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %> <%= current_user.last_name %> 
                <% unless current_user.profile_photo.nil? %><%= image_tag(current_user.profile_photo.file, size: '22x22') %><% end %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                
                <% if current_user %>
                  <li><%= link_to t('.profile'), user_path(id: current_user.id) %></li>
                <% elsif current_consultant %>
                  <li><%= link_to 'Consultant Profile', consultant_path(id: current_consultant.id) %></li>
                <% end %>

                <li><%= link_to 'Setting', edit_user_path(id: current_user.id) %></li>
                <% if current_user %>
                  <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to 'Logout', destroy_consultant_session_path, method: :delete %></li>
                <% end %>
              </ul>
            </li>
          <% elsif current_consultant %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_consultant.first_name %> <%= current_consultant.last_name %> 
                <% unless current_consultant.profile_photo.nil? %><%= image_tag(current_consultant.profile_photo.file, size: '22x22') %><% end %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.consultant_profile'), consultant_path(id: current_consultant.id) %></li>
                <li><%= link_to t('setting'), edit_consultant_path(id: current_consultant.id) %></li>
                <li><%= link_to t('logout'), destroy_consultant_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
</header>