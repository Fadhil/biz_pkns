!!! 5
%head
  %title PKNS - Biz Data
  %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
  %meta{:name => 'google-site-verification', :content => "hkVb6_9c0v6JIbtoTS-B-aUcQE_kEp6ULk3VDeE4Y-U"}
  /[if lt IE 9]
  %script{:src => 'http://html5shim.googlecode.com/svn/trunk/html5.js'}
  /Stylesheet
  %link{:href => 'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext', :rel => "stylesheet", :type => "text/css"}
  = stylesheet_link_tag "application", :media => "all"

  /Scripts
  = javascript_include_tag "application"
  %script{ :src => 'http://www.google.com/jsapi', :type => 'text/javascript', :charset => 'utf-8' }

  = csrf_meta_tags
    
  = render '/layouts/analytics'
%body.home{:'ng-app' => 'PKNS'}
  = render '/layouts/header'
  %section#main{:'ng-controller' => 'MainCtrl', :class => controller.controller_name}
    .row
      .seven.columns.centered
        = render '/layouts/flash'
    .row
      .three.columns.print-disabled
        = render '/layouts/sidebar'
      .nine.columns.print-section
        .row
          = yield
    .push
    .row
      = render '/layouts/footer'
