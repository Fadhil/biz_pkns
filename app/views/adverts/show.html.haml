- model_class = Advert
.page-header
  %h1
    = t '.title'
    \:
    = @advert.title
%dl.dl-horizontal
  %div.adbox
    - if @advert.advert_type == 'Course'
      - if @advert.photo
        - if !@advert.photo.file.nil?
          %div.adinfo.userselect
            %div.title= @advert.title
            %div.venue= 'Tempat : '+ @advert.location.to_s
            %div.date= 'Tarikh : '+ @advert.start_date.strftime("%d %b %y").to_s
          = image_tag (@advert.photo.file)#, :class => 'adboxw'#, size: '100x100'
    - else
      - if @advert.photo
        - if !@advert.photo.file.nil?
          %div.adinfo-product.userselect
            %div.title= @advert.title
            %div.content= @advert.content
          = image_tag (@advert.photo.file)#, :class => 'adboxw'#, size: '100x100'
  %h3=t('.advert_information')
  %table.table.strip
    %tr
      %td{style: 'width:190px'}
        %strong
          Jenis Iklan
      %td= @advert.advert_type.blank? ? "<br/>".html_safe : t(@advert.advert_type.downcase)
    %tr
      %td
        %strong
          = t('name')
      %td= @advert.title.blank? ? "<br/>".html_safe : @advert.title
    %tr
      - if @advert.advert_type == 'Course'  
        = render partial: 'course_advert'
      - else
        = render partial: 'product_advert'

.form-actions
  - if can? :manage, :all
    - if @advert.requested? && !(@advert.request_status == 'approved')
      = link_to t('reject_request'), make_request_advert_path(id: @advert.id, advert: { requested: 0, request_status: 'rejected' }, advert_action: 'reject' ), method: :put#, class: 'btn'
      = link_to t('approve_request'), make_request_advert_path(id: @advert.id, advert: { requested: 1, request_status: 'approved' }, advert_action: 'approve'), method: :put#, class: 'btn'
    - unless @advert.request_status == 'approved'
      %span.pretty.btn.secondary
        = link_to t('edit', :default => t("helpers.links.edit")), edit_advert_path(@advert)#, :class => 'btn'
      %span.pretty.btn.danger
        = link_to t('destroy', :default => t("helpers.links.destroy")), advert_path(@advert), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }#, :class => 'btn btn-danger'

  - elsif can? :manage, Advert
    - if !@advert.requested?
      = link_to t('make_request'), make_request_advert_path(id: @advert.id, advert: { requested: 1, request_status: 'pending' }, advert_action: 'request'), method: :put#, class: 'btn'
      %span.pretty.btn.secondary
      = link_to t('edit', :default => t("helpers.links.edit")), edit_advert_path(@advert)#, :class => 'btn'
      %span.pretty.btn.danger
        = link_to t('destroy', :default => t("helpers.links.destroy")), advert_path(@advert), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }#, :class => 'btn btn-danger'
  
