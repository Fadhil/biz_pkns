<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %> <%= if current_consultant && current_consultant.program then current_consultant.program.name end %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('id') %></th>
      <th><%= t('date_tarikh') %></th>
      <th><%= t('name') %></th>
      <th><%= t('program') %></th>
      <th><%= t('venue') %></th>
      <th><%= t('status') %></th>
      <% if can? :manage, @course %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.id, course_path(course) %></td>
        <td><%= course.start_date %></td>
        <td><%= course.name %></td>
        <% unless course.program.nil? %>
          <td><%= course.program.name %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= course.venue %></td>
        <td><%= !course.status.blank? || course.status? ? "Active" : "Not active" %></td>
        <% if current_consultant || current_user.try(:admin?) %>
          <td>
            <% if can? :manage, Consultant %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_course_path(course), :class => 'btn btn-mini' %>
            <% end %>
            <% if can? :destroy, Consultant %>
              <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                          course_path(course),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('are_you_sure'))) },
                          :class => 'btn btn-mini btn-danger' %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :manage, @course %>
  <%= link_to t('.create_course', :default => t("helpers.links.new")),
              new_course_path,
              :class => 'btn btn-primary' %>
<% end %>
