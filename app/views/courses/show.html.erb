<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('name') %>:</strong></dt>
  <dd><%= @course.name %></dd>
  <dt><strong><%= t('description') %>:</strong></dt>
  <dd><%= @course.description %></dd>
  <dt><strong><%= t('start_date') %>:</strong></dt>
  <dd><%= @course.start_date %></dd>
  <dt><strong><%= t('end_date') %>:</strong></dt>
  <dd><%= @course.end_date %></dd>
  <dt><strong><%= t('venue') %>:</strong></dt>
  <dd><%= @course.venue %></dd>
  <dt><strong><%= t('pax') %>:</strong><dt>
  <dd><%= @course.pax %></dd>
  <dt><strong><%= t('status') %>:</strong></dt>
  <dd><%= !@course.status.blank? || @course.status? ? "Active" : "Not active" %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('back', :default => t("helpers.links.back")),
              courses_path, :class => 'btn'  %>
  <% if can? :manage, @course %>
    <%= link_to t('edit', :default => t("helpers.links.edit")),
                edit_course_path(@course), :class => 'btn' %>
    <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                course_path(@course),
                :method => 'delete',
                :data => { :confirm => t('confirm', :default => t("helpers.links.confirm", :default => t('are_you_sure'))) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
