- model_class = PastAttendance
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th{:style => "width:auto;"}= t('program')
      %th{:style => "width:auto;"}= t('course')
      %th{:style => "width:auto;"}= t('start_date')
      %th{:style => "width:auto;"}= t('end_date')
      %th{:style => "width:auto;"}= t('venue')   
      %th{:style => "width:auto;"}= t('first_name')
      %th{:style => "width:auto;"}= t('last_name')
      %th{:style => "width:auto;"}= t('ic_number') 
      %th{:style => "width:auto;"}= t('phone') 
      %th{:style => "width:auto;"}= t('email')  

      / %th
  %tbody
    - @past_attendances.each_with_index do |past_attendance, i|
      %tr
        %td
          = past_attendance.program
        %td
          = past_attendance.course
        %td
          = past_attendance.start_date
        %td
          = past_attendance.end_date
        %td
          = past_attendance.venue
        %td
          = past_attendance.first_name
        %td
          = past_attendance.last_name
        %td
          = past_attendance.ic_number
        %td
          = past_attendance.phone
        %td
          = past_attendance.email
        / %td
        /   = link_to t('view', :default => t("helpers.links.edit")),             |
        /     past_attendance_path(past_attendance), :class => 'btn btn-secondary btn-mini' |
        /   -#
        /   = link_to t('destroy', :default => t("helpers.links.destroy")),                                                |
        /     past_attendance_path(past_attendance),                                                                                 |
        /     :method => :delete,                                                                                          |
        /     :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
        /     :class => 'btn btn-mini btn-danger'                                                                          |
%br/
= form_for :past_attendance,  :url=>{:controller=>"past_attendances", :action=>"create"}, :html => { :multipart => true } do |f|
  = f.label 'Select a CSV file'
  = f.file_field :file
  = f.submit class: 'btn btn-mini'

=# link_to t('new_past_attendance'), new_past_attendance_path,:class => 'btn btn-primary'
