<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human %></h1>
</div>
<%#= render :partial => 'form' %>
<%= nested_form_for @user, :html => { :class => 'form-horizontal', multipart: true } do |f| %>
  <div class="control-group">
    <%= f.label "Lantik", :class => 'control-label' %>
    <div class="controls">
      <%= f.select :role_id, [['Ya',true],
                              ['Tidak',false]] %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit t('update'), :class => 'btn btn-primary' %>
    <%= link_to t('cancel', :default => t("helpers.links.cancel")),
                admin_path, :class => 'btn btn-primary' %>
  </div>
<% end %>
