#welcome
  .row
    .eight.columns
      .row.top
        %h2.title
          Selamat Datang ke Sistem Aplikasi PKNS Biz Data.
        %h6.title
          Di sini anda berpeluang untuk menjana dan meluaskan empayar perniagaan.
      %article.valign.row
        %div.two.columns.circle.image
          %img{:src => 'http://lorempixel.com/150/150/business/2'}
        %div.nine.push-one.columns
          %h5.title Rakan niaga pelbagai bidang dan kemahiran.
          %p.sub Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature.
      %article.valign.row
        %div.two.columns.circle.image
          %img{:src => 'http://lorempixel.com/150/150/business/3'}
        %div.nine.push-one.columns
          %h5.title Kongsi pengalaman dalam perniagaan.
          %p.sub Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature.
      %article.valign.row
        %div.two.columns.circle.image
          %img{:src => 'http://lorempixel.com/150/150/business/4'}
        %div.nine.push-one.columns
          %h5.title Jaringan keusahawanan mantap dan berkesan.
          %p.sub Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature.

    .four.columns
      - unless current_user
        .panel
          .row
            %h6.eleven.columns
              = t('sign_in')
            %span.one.columns
              %i.icon-cog.ico-custom
          .row
            = form_for("user", :url => user_session_path) do |f|
              %ul.eleven.columns
                %li.field
                  = f.email_field :email, :autofocus => true, :class => 'email input', :placeholder => t('email')
                %li.field
                  = f.password_field :password, :class => 'password input', :placeholder => t('password')
                %li.field
                  .seven.columns
                    - if devise_mapping.rememberable?
                      = f.label t('remember_me'), :class => 'checkbox checked', :for => 'user_remember_me' do
                        = f.check_box :remember_me, :checked => 'checked'
                        %span
                        Remember Me
                  .five.columns
                    = f.submit t('login'), :class => ' pretty medium primary btn'
        .panel
          .row
            %h6.twelve.columns
              = t('sign_up')

          .row
            = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
              = devise_error_messages!
              %ul.eleven.columns
                %li.field
                  = f.text_field :first_name, :autofocus => true, :placeholder => t('first_name'), :class => 'text input'
                %li.field.hide
                  = f.text_field :last_name, :autofocus => true, :placeholder => t('last_name'), :class => 'text input'
                %li.field
                  = f.text_field :ic_number, :placeholder => t('ic_number'), :class => 'input normal'
                  = f.text_field :phone, :placeholder => t('phone'), :class => 'input normal'
                %li.field
                  = f.email_field :email, :autofocus => true, :placeholder => t('email'), :class => 'email input'
                %li.field
                  = f.password_field :password, :placeholder => t('password'), :class => 'password input'
                %li.field
                  = f.password_field :password_confirmation, :placeholder => t('password_confirmation'), :class => 'password input'
                  = f.hidden_field :is_active, value: true
                %li.field
                  .seven.columns
                    = check_box_tag :terms_of_service,1
                    %span
                    Terma dan Syarat
                %li.field
                  = f.submit t('sign_up'), :class => ' pretty medium primary btn'