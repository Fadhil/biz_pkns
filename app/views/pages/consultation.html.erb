<%- model_class = Consultant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @consultants.each do |consultant| %>
      <tr>
        <td><%= link_to consultant.id, consultant_path(consultant) %></td>
        <td><%= consultant.first_name %></td>
        <td><%= consultant.last_name %></td>
        <td><%= consultant.email %></td>
        <td>
          <%= link_to 'View',
                    consultant_path(consultant), :class => 'btn btn-mini' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_consultant_path,
            :class => 'btn btn-primary' %>
