- model_class = Consultant
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th{:style => "width:auto;"}= t('.name')
      %th{:style => "width:auto;"}= t('company_name')
      %th{:style => "width:auto;"}= t('program')
      %th
  %tbody
    - @consultants.each_with_index do |consultant, i|
      %tr
        %td
          = consultant.first_name
          = consultant.last_name
        %td
          = consultant.company_name
        %td
          %ul
            - consultant.programs.each do |p|
              %li=p.name
        %td
          = link_to t('view', :default => t("helpers.links.edit")),             |
            consultant_path(consultant), :class => 'btn btn-secondary btn-mini' |
          -#
          = link_to t('destroy', :default => t("helpers.links.destroy")),                                                |
            consultant_path(consultant),                                                                                 |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'                                                                          |
%br/
= link_to t('new_consultant'), new_consultant_path,:class => 'btn btn-primary'
