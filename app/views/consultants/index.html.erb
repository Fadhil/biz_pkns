<%- model_class = Consultant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('company_name') %></th>
      <th><%= t('program') %></th>
    </tr>
  </thead>
  <tbody>
    <% @consultants.each_with_index do |consultant, i| %>
      <tr>
        <td><%= consultant.first_name %> <%= consultant.last_name %></td>
        <td><%= consultant.company_name %> </td>
        <td><%= consultant.program.name unless consultant.program.nil? %></td> 
        <td>
          <%= link_to t('view', :default => t("helpers.links.edit")),
                      consultant_path(consultant), :class => 'btn btn-mini' %>
          <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                      consultant_path(consultant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to t('new_consultant'), new_consultant_path,:class => 'btn btn-primary' %>
