<%- model_class = Consultant -%>
<div class="page-header">
  <h2>Contact <%= @consultant.first_name %> <%= @consultant.last_name %></h2>
</div>

<%= form_for @consultant, url: contact_sent_path, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.text_field :name, :class => 'text_field', type: "hidden", :value => "#{current_user.first_name} #{current_user.last_name}" %>
  <%= f.text_field :email, :class => 'text_field', type: "hidden", :value => current_user.email %>
  
  <div class="control-group">
    <%= f.label "Subject", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "Message", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :message %>
    </div>
  </div>

  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                consultants_path, :class => 'btn'  %>
    <%= button_tag "Send", class: 'btn btn-success' %>
  </div>
<% end %>
