.row
  .twelve.columns
    %h3= t('change_your_password')
.row
  .eight.columns
    - unless current_user
      .panel
        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          %ul
            %li.field
              = f.label :password, t('password')
              = f.password_field :password, :autofocus => true, :class => 'password input'
            %li.field
              = f.label :password_confirmation, t('new_password_confirmation')
              = f.password_field :password_confirmation, :class => 'password input'
            %li.field
              = f.submit t('change_your_password'), :class => ' pretty medium warning btn'
    = render "devise/shared/links"