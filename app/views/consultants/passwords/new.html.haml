.row
  .twelve.columns
    %h3= t('forgot_your_password')
.row
  .eight.columns
    - unless current_user
      .panel
        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
          = devise_error_messages!
          %ul
            %li.field
              = f.label t('email')
              = f.email_field :email, :autofocus => true, :class => 'email input'
            %li.field
              = f.submit t('send_password_instructions'), :class => ' pretty medium warning btn'
            .hide
              %li.field
                %label.checkbox{ :for => :terms_of_service }
                  = check_box_tag :terms_of_service, 1, true, class: 'checked'
                  %span
    = render "devise/shared/links"