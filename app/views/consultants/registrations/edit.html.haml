.row
  .twelve.columns
    %h3= "Edit #{resource_name.to_s.humanize}"
.row
  .eight.columns
    .panel
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put) do |f|
        = devise_error_messages!
        %ul
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %li.field
              %p= "Currently waiting confirmation for: #{resource.unconfirmed_email}"
          %li.field
            = f.label t('email')
            = f.email_field :email, :autofocus => true, :class => 'text input'
          %li.field
            = f.label :current_password
            = f.password_field :current_password, :class => 'text input', :autocomplete => "off"
            %small we need your current password to confirm your changes
          %li.field
            = f.label t('password')
            = f.password_field :password, :class => 'text input', :autocomplete => "off"
            %small leave blank if you don't want to change it
          %li.field
            = f.label t('password_confirmation')
            = f.password_field :password_confirmation, :class => 'text input'
          %li.field
            = f.hidden_field :is_active, value: true
            %span.pretty.medium.warning.btn
              / = f.submit t('sign_up')
              %button{:onClick => 'submit();'} Update

      .row
        %h4 Cancel My Account
        %span.pretty.medium.warning.btn
          = button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete