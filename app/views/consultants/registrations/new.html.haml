.row
  .twelve.columns
    %h3= t('sign_up')
.row
  .eight.columns
    .panel
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        %ul
          %li.field
            = f.label t('email')
            = f.email_field :email, :autofocus => true, :class => 'text input'
          %li.field
            = f.label t('password')
            = f.password_field :password, :class => 'text input'
          %li.field
            = f.label t('password_confirmation')
            = f.password_field :password_confirmation, :class => 'text input'
          %li.field
            = f.hidden_field :is_active, value: true
            %span.pretty.medium.warning.btn
              / = f.submit t('sign_up')
              %button{:onClick => 'submit();'}=t('sign_up')
